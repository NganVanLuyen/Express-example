extends ../layouts/common.pug
block content
    h2 
        span.me-3 List Users
        a.btn.btn-primary(href="/users/create") New User

    .d-flex.align-items-center
        form.ms-auto(action="/users/search", method="GET", class="d-flex") 
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ms-2") Search
        
    table.table
        tr
            th Name 
            th Phone 
            th Action
        each user in users
            tr
                td= user.name
                td= user.phone 
                td
                  a.btn.btn-light(href="/users/" + user.id) View User 

    